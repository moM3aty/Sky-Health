@model Sky_Health.Models.Order
@{
    ViewData["Title"] = "الدفع عبر We Pay";
}

<div class="container section-padding">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm p-4 p-md-5 text-center">
                <h3 class="title mb-3">الدفع عبر We Pay</h3>
                <p class="text-muted">لإتمام طلبك رقم <strong class="text-primary">#@Model.Id</strong>، يرجى تحويل المبلغ إلى الرقم التالي.</p>

                <div class="my-4">
                    <p class="fs-5">المبلغ الإجمالي للدفع:</p>
                    <h2 class="fw-bold text-danger">@Model.TotalAmount.ToHindi() جنيه</h2>
                </div>

                <hr>

                <div class="alert alert-info">
                    <p>يرجى تحويل المبلغ إلى الرقم التالي:</p>
                    <h4 class="fw-bold user-select-all" dir="ltr">01555320320</h4>
                </div>

                <p class="mt-4">بعد إتمام عملية التحويل، سيتم تأكيد طلبك تلقائياً خلال دقائق.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-3">العودة إلى الرئيسية</a>
            </div>
        </div>
    </div>
</div>
