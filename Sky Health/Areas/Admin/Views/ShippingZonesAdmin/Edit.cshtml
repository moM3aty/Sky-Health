@model Sky_Health.Models.ShippingZone
@{
    ViewData["Title"] = "تعديل منطقة الشحن";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">تعديل منطقة الشحن</h1>
    <a asp-action="Index" class="btn btn-light"><i class="fas fa-arrow-right me-2"></i>العودة للقائمة</a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <form asp-action="Edit">
            <div class="card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer bg-transparent text-end">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>حفظ التعديلات</button>
                    <a asp-action="Index" class="btn btn-light">إلغاء</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
