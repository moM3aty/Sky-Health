@model Sky_Health.ViewModels.ShippingZonesAdminViewModel
@{
    ViewData["Title"] = "إدارة مناطق الشحن";
}

<div class="page-header">
    <h1 class="page-title">إدارة مناطق الشحن</h1>
    <div class="d-flex align-items-center">
        <form asp-action="Index" method="get" class="me-3">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="بحث باسم المنطقة..." value="@Model.SearchTerm">
                <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i>إضافة منطقة</a>
    </div>
</div>


<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>اسم المنطقة</th>
                        <th>سعر الشحن</th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ShippingZones)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price.ToHindi() جنيه</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-circle btn-outline-primary" title="تعديل"><i class="fas fa-pen"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-circle btn-outline-danger ms-1" title="حذف"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>